<form action = "/login" method = "post">
 
  <h3 class="row text-info form-group col-sm-offset-1">Login</h3>
  
  <div class=" row form-group">
    <label for="inputName" class="col-sm-11 col-sm-offset-1 control-label">Username:</label>
