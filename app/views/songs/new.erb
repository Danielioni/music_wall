<% if @song.errors.any? %>
  <div>
    <strong>Some issues with your song post, please fix them:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">

  <h3 class="row text-info form-group col-sm-offset-1">Post Song</h3>
  <div class="row form-group">
    <label for="Artist" class="col-sm-11 col-sm-offset-1 control-label">Artist: </label>
    <div class="col-sm-4 col-sm-offset-1">
      <input type="text" name="artist" class="form-control" value="<%= @song.artist %>">
    </div>
  </div>

  <div class="row form-group">
    <label for="Title" class="col-sm-11 col-sm-offset-1 control-label">Song Title: </label>
    <div class="col-sm-4 col-sm-offset-1">
      <input type="text" name="title" class="form-control" value="<%= @song.title %>">
    </div>
  </div>

  <div class="row form-group">
    <label for="Url" class="col-sm-11 col-sm-offset-1 control-label">Link: </label>
    <div class="col-sm-4 col-sm-offset-1">
      <input type="text" name="url" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <button type="submit" value="Submit" class="btn btn-default col-sm-1 col-md-offset-1">Post Song</button>
  </div>

</form>